  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #1952B8
  &:focus
    color: #000
    caret-color: #1952B8
    border 1px solid #1952B8
    box-shadow: 3px 3px 10px 0px #1952B8
    background: #fff
    &::placeholder
      color: #000
  &::placeholder
    color: #000
  +above($breakpoints.sm)
    padding: 0 20px;
    font-size: 16px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 30px;
    font-size: 18px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 35px;
    font-size: 20px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 35px
    resize: none
    height: 70px
    width 280px
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px
      padding: 15px 10px 10px 20px
      width 235px
      height: 106px
    +above($breakpoints.md)
      border-radius: 20px
      padding: 17px 10px 10px 30px
      width 308px
      height: 118px;
    +above($breakpoints.xxl)
      border-radius: 30px
      padding: 20px 10px 10px 35px
      width 380px
      height: 130px

  &--secondary
    border: 1px solid #fff
    &:hover
      border 1px solid #fff
    &:focus
      border 1px solid #fff
      box-shadow: 3px 3px 10px 0px #fff
