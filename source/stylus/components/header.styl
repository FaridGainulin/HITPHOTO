.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    +above($breakpoints.sm)
      align-items: flex-start

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 18px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 32px

  &__logo
    width 150px
    height: 23px
    +above($breakpoints.sm)
      width 255px
      height: 39px
    +above($breakpoints.md)
      width 372px
      height: 57px
    +above($breakpoints.xxl)
      width 470px
      height: 72px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 12px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 19px

  &__line
    +above($breakpoints.sm)
      background-color #fff
      border-radius: 3px
      width 2px
      height: 40px
    +above($breakpoints.md)
      height: 57px
      width 3px
    +above($breakpoints.xxl)
      height: 72px

  &__text
    +above($breakpoints.sm)
      display: flex
      flex-direction: column

  &__connection
    display: flex
    align-items: center
    justify-content center
    background-color $color-red
    border-radius: 20px
    gap: 6px
    width: 125px;
    height: 21px;
    +above($breakpoints.sm)
      gap: 7px;
      width: 170px;
      height: 30px;
    +above($breakpoints.md)
      gap: 10px;
      width: 185px;
      height: 33px;
    +above($breakpoints.xxl)
      gap: 13px
      width 220px
      height: 40px

  &__connection-icon
    width 10px
    height: 9px
    +above($breakpoints.sm)
      width 13px
      height: 12px
    +above($breakpoints.md)
      width: 15px;
      height: 14px;
    +above($breakpoints.xxl)
      width 19px
      height: 18px
