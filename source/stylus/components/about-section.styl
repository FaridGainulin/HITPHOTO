.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    padding: 20px 0
    +above($breakpoints.sm)
      padding 30px 0 40px
    +above($breakpoints.md)
      padding 50px 0 60px
    +above($breakpoints.xxl)
      padding 77px 0 92px

  &__img-left
    position: absolute
    z-index -1
    width: 160px;
    height: auto;
    top: 124px;
    left: -146px;
    +above($breakpoints.sm)
      width: 280px;
      top: 0px;
      left: -268px;
    +above($breakpoints.md)
      width: 394px;
      top: 8px;
      left: -380px;
    +above($breakpoints.xxl)
      width 494px
      top: 24px
      left: -515px

  &__img-right
    position: absolute
    z-index -1
    width: 150px;
    height: auto;
    bottom: 181px;
    right: -117px;
    +above($breakpoints.sm)
      width: 260px;
      bottom: 60px;
      right: -232px;
    +above($breakpoints.md)
      width: 325px;
      bottom: 101px;
      right: -300px;
    +above($breakpoints.xxl)
      width 425px
      bottom: 101px
      right: -487px

  &__title,
  &__bottom-title
    text-align: center
    text-transform: uppercase
    color: $color-blue

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 20px
    +above($breakpoints.md)
      padding-bottom 30px
    +above($breakpoints.xxl)
      padding-bottom 45px

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row-reverse
      justify-content flex-end
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__text-mobile
    text-align: center
    color: #000
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      display: none

  &__text
    display: none
    +above($breakpoints.sm)
      color: #000
      display: flex
      flex-direction: column
      gap: 8px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 16px

  &__text-item
    font-size: 13px
    line-height: 120%
    +above($breakpoints.sm)
      font-size: 10px
    +above($breakpoints.md)
      font-size: 13px
    +above($breakpoints.xxl)
      font-size: 16px

  &__img
    width 280px
    height: auto
    border-radius: 10px
    +above($breakpoints.sm)
      width: 231px;
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
      width: 306px;
    +above($breakpoints.xxl)
      width 380px

  &__bottom-title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 50px 0 30px
    +above($breakpoints.xxl)
      padding 65px 0 40px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    button
      width 280px !important
      +above($breakpoints.sm)
        width 235px !important
        height: 106px !important
      +above($breakpoints.md)
        width 308px !important
        height: 118px !important
      +above($breakpoints.xxl)
        width 380px !important
        height: 130px !important

  &__form-column
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 235px
      gap: 6px
    +above($breakpoints.md)
      width 308px
      gap: 8px
    +above($breakpoints.xxl)
      width 380px
      gap: 10px
