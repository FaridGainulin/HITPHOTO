.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #3869C1

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0 90px
    +above($breakpoints.md)
      padding 40px 0 150px
    +above($breakpoints.xxl)
      padding 55px 0 278px

  &__title
    position relative
    z-index 1
    padding 20px 0 10px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 30px 0
    +above($breakpoints.md)
      padding 90px 0 70px 0
    +above($breakpoints.xxl)
      padding 158px 0 101px 0
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-red
      border-radius: 30px
      width: 264px;
      height: 20px;
      top: 41px;
      left: 23px;
      +above($breakpoints.sm)
        width: 399px;
        height: 31px;
        top: 80px;
        left: -10px;
      +above($breakpoints.md)
        width: 594px;
        height: 43px;
        top: 134px;
        left: -12px;
      +above($breakpoints.xxl)
        width: 658px;
        height: 46px;
        top: 216px;
        left: -13px;

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 480px
      align-items: flex-start
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 9px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 380px !important
      +above($breakpoints.md)
        width 420px !important
      +above($breakpoints.xxl)
        width 480px !important

  &__img
    width: 308px;
    height: auto;
    margin: 15px 0 0 -19px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 528px;
      bottom: 0;
      right: -151px;
    +above($breakpoints.md)
      width: 780px;
      right: -219px;
    +above($breakpoints.xxl)
      width 1114px
      right: -370px
